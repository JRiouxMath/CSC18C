package big_o_discussion;

public class Big_O_Discussion {

   
    public static void main(String[] args) {
        /*
        int N;
         System.out.print ("enter an integer value for N:");
         N = new java.util.Scanner(System.in).nextInt();
         
         int s = 0;
         int steps = 0;
         for (int i = 0; i<N; i++)
         {
            for(int j = 0; j<N; j++)
            {
                s+=j;
                steps++;
            } //end jloop
         }// end iloop
         
         System.out.println("Number of steps: " + steps);
         */
        
        int N;
         System.out.print ("enter an integer value for N:");
         N = new java.util.Scanner(System.in).nextInt();
         
         int s = 0;
         int steps = 0;
         for (int i = N; i>0; i=i/2)
         {
            s +=1;
            steps ++;
         }// end iloop
         
         System.out.println("Number of steps: " + steps);
        
    }// end main method
    
}
